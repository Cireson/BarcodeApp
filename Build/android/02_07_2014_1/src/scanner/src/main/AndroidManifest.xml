<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cireson.scanner" >

    <uses-permission android:name="android.permission.CAMERA" />

    <supports-screens android:xlargeScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cr_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cireson.scanner.splash.SplashScreen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cireson.scanner.view.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.view.MainNavActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.SearchAssetsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.AssetSearchResultsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.ScanAssetsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.MatchConfirmationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.AssetPropertiesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.InventoryAudit"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.ConfigureSettings"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cireson.scanner.ScanActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
