<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cireson.assetmanager"
    android:versionCode="2"
    android:versionName="1.1"
    >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/productlogowhite"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".splash.SplashScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".controller.MainNavigationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.AssetsSearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.AssetsSearchResultsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.AssetsScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.BluetoothPairedDeviceListActivity"
            android:label="@string/title_paired_devices_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.AssetsEditorActivity"
            android:label="Edit Assets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.StatusTreeViewActivity"
            android:label="@string/title_activity_status_tree_veiw"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.LocOrgCcSelectionActivity"
            android:label="Search"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.CustodianSearchActivity"
            android:label="@string/title_activity_status_tree_veiw"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.DatePickerActivity"
            android:label="Date picker"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.AssetsDisposalActivity"
            android:label="Dispose Purchase Order"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.InventorySearchActivity"
            android:label="Inventory Search Assets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.InventoryAuditsEmailSettingsActivity"
            android:label="Review Email Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.PossibleMatchedAssetsActivity"
            android:label="Possible Matched Assets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.DisposalReferenceEditorActivity"
            android:label="@string/edit_dispose_ref_general_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.Settings"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.TheSettingsActivity"
            android:label="@string/title_activity_logout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.SwapNoteEditorActivity"
            android:label="@string/title_activity_activity_swap_note_editor" >
        </activity>

    </application>
</manifest>
