<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/editAssetsListIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp" />
    <TextView
        android:id="@+id/editAssetsListLabel"
        style="@style/cireson_texts"
        android:layout_gravity="center_vertical" />
    <!--android:layout_toRightOf="@id/editAssetsListIcon"/>-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/editAssetsSelectionLabel"
            style="@style/cireson_texts"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:singleLine="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="5dp"
        android:src="@drawable/list_arrow_new"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
