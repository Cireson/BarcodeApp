<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/cireson_main_container"
    android:orientation="vertical"
    tools:context="com.cireson.assetmanager.controller.AssetsSearchResultsActivity"
    tools:ignore="MergeRootFrame">
    <!--Header-->
    <LinearLayout
        style="@style/cireson_header_linear_layout"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/assetsSearchResultTitleNumber"
            style="@style/cireson_text_title_number"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:text="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assetsSearchResultTitle"
                style="@style/cireson_title"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/search_assets_result_title"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/assetsSearchResultSubTitleText"
                style="@style/cireson_sub_title"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="235345234"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- horizontal white line -->
    <LinearLayout
        style="@style/cireson_single_white_line"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp" />
    <!--Body-->
    <LinearLayout
        style="@style/cireson_body_linear_layout"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:divider="@drawable/seperator_horizontal" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        style="@style/cireson_footer_button"
        android:onClick="goNext"
        android:text="@string/next"
        android:visibility="gone" />
